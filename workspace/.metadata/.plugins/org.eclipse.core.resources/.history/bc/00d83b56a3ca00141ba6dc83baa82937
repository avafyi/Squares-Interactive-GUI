import java.awt.Color;

public class Player {

	public static final int DOWN = 3;
	public static final int UP = 1;
	public static final int RIGHT = 0;
	public static final int LEFT = 2;

	// Player attributes
	public Color PLAYER_COLOR = Color.YELLOW;   
	public int x = 2; 						// the x location of the player using tile coordinates
	public int y = 3;						// the y location of the player using tile coordinates
	public int direction = DOWN;
	
	public Player(int tile_x, int tile_y, int direction) {
		x = tile_x;
		y = tile_y;
		direction = direction;
	}

}
